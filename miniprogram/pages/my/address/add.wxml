<view> 
  <!-- 表单 -->
  <form bindsubmit="saveData" report-submit="true">
    <van-field
      name="name"
      value="{{name}}" 
      label="收货人"
      placeholder="请输入收货人" 
    />
    <van-field
      name="phone" 
      value="{{phone}}" 
      label="手机号"
      placeholder="请输入手机号" 
    /> 
    <van-cell is-link>
      <view slot="title"> 
        <picker slot="button" mode="region" bindchange="bindRegionChange" value="{{ region }}">
          <text>所在地区</text>
          <input style="display: none" name="region" value="{{region}}"></input>
          <text style="margin-left: 66rpx;" >{{ region ? region : '请选择' }}</text> 
        </picker>
      </view>
    </van-cell>  
    <van-cell-group>
      <van-field
        name="detail"
        value="{{detail}}"
        label="详细地址"
        type="textarea"
        placeholder="请输入详细地址"
        autosize 
      />
    </van-cell-group> 
    <view class="button-wx" catchtap="chooseAddress">一键获取微信地址</view>
    <button class="button-sever" formType="submit">保存</button>
  </form>
</view>

