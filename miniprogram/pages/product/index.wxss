.swiper {
  width: 100%;
  height: 750rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  display: block;
}

.goods-header {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 20rpx solid #f5f5f5;
}

.goods-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-price {
  color: #fe0000;
}

.goods-sort {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.29);
  padding-left: 20rpx;
  display: inline-block;
}

.goods-content image {
  display: block;
}
 
.trade {

}

.trade-header {
  display: flex;
  padding: 20rpx;
}

.trade-header-left {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}

.trade-header-right {
  flex: 1;
}

.trade-header-right .title {
  min-width: 0;
  height: 74rpx;
  line-height: 36rpx;
  font-size: 32rpx;
}

.trade-header-right .sort {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.29);
  margin: 20rpx 0rpx;
}

.trade-header-right .price {
  color: #fe0000;
  font-size: 32rpx;
}

.trade-body{
  padding: 20rpx;
}
.trade-body .title{
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.trade-body .body{
  display: flex;
  flex-wrap: wrap;
}
.trade-body .body .item{
  display: inline-block;
  padding: 6rpx 28rpx 8rpx 28rpx;
  border-radius: 20px;
  font-size: 22rpx;
  margin-right: 20rpx;
  border: 1rpx solid rgba(0,0,0,.15)
}
.trade-body .body .on{
  color: #ffffff;
  background: #ff2f09;
  border: 1rpx solid #ff2f09
}

.trade-number{
  display: flex;
  margin: 18px 0px;
  padding: 0rpx 14rpx;
}
.trade .label{
  flex: 1;
  font-size: 30rpx;
}
.trade-number .box{
  width: 118px;
  height: 33px;
  display: flex;
  border: 1px solid rgba(0,0,0,.32);
  border-radius: 20px;
  text-align: center;
}
.trade-number .box .pull{
  width: 40px;
  height: 33px;
  line-height: 33px; 
  border-right: 1px solid rgba(0,0,0,.32);
  display: inline-block;
}
.trade-number .box input{
  width: 42px;
  height: 33px; 
  color: #333; 
  font-size: 24rpx;
  text-align: center; 
}
.trade-number .box .push{
    width: 40px;
    height: 33px;
    line-height: 33px;
    border-left: 1px solid rgba(0,0,0,.32);
    display: inline-block;
}
.trade-footer{
    height: 98rpx;
    line-height: 98rpx; 
    font-weight: 400;
    text-align: center;
    color: #fff; 
    background: linear-gradient(90deg,#ff3c6f,#ff2f09);
}